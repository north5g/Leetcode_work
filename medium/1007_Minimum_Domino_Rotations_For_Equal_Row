class Solution:
    def minDominoRotations(self, tops: List[int], bottoms: List[int]) -> int:
        for i in range(1, 7):  # Check valid candidates 1-6
            top_flips = 0
            bottom_flips = 0
            valid = True
            for j in range(len(tops)):
                if tops[j] != i and bottoms[j] != i:
                    valid = False
                    break
                if tops[j] != i:
                    top_flips += 1
                if bottoms[j] != i:
                    bottom_flips += 1
            if valid:
                return min(top_flips, bottom_flips)
        return -1