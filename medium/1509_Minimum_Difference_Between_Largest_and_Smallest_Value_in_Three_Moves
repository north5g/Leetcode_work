class Solution:
    def minDifference(self, nums: List[int]) -> int:
        if len(nums) < 5:
            return 0
        else:
            smallest = sorted(heapq.nsmallest(4, nums))
            largest = sorted(heapq.nlargest(4, nums))
            min_diff = float('inf')
            for i in range(4):
                min_diff = min(min_diff, largest[i] - smallest[i])
            return min_diff