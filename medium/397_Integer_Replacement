class Solution:
    def integerReplacement(self, n: int) -> int:
        counter = 0
        while (n != 1):
            if (n % 2 == 0):
                n = n / 2
                counter += 1
            elif (n == 3):
                n -= 1
                counter += 1
            elif (n % 4 == 3):
                n += 1
                counter += 1
            elif (n % 4 == 1):
                n -= 1
                counter += 1
        return counter